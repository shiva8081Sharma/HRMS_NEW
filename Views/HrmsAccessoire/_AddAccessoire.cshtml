@model HRMS.Models.HrmsAccessoireViewModel

@using (Html.BeginForm("SaveAccessoire", "HrmsAccessoire", FormMethod.Post, htmlAttributes: new { @id = "form-Get-Approvel-Attendance" }))
{

    <div class="form-group">

        <div class="col-md-12">

            <label class=" col-md-2">Accessoire_Name</label>

            @Html.TextBoxFor(model => model.Accessoire_Name, new { @class = "form-control " })
            @Html.ValidationMessageFor(model => model.Accessoire_Name, "", new { @class = "text-danger" })
        </div>


        <div class="form-group">
            <div class="col-md-12">

                <label class=" col-md-2">Accessoire_Type</label>

                @Html.TextBoxFor(model => model.Accessoire_Type, new { @class = "form-control " })
                @Html.ValidationMessageFor(model => model.Accessoire_Type, "", new { @class = "text-danger" })
            </div>
            </div>

            <div class="form-group">
                <label class="col-md-12">Expence_Date</label>
                <div class="col-md-12">
                    @Html.TextBoxFor(model => model.Expence_Date, new { @class = "form-control", type = "Date" })
                    @Html.ValidationMessageFor(model => model.Expence_Date, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="form-group btn-buttn" style="margin-top:4%; margin-left:80%">
            <button type="submit" class="btn btn-success" id="submitbutton">Submit</button>
            <button type="button" class="btn btn-danger" data-bs-dismiss="modal" aria-label="Close">Close</button>
        </div>

        }
        <script src="~/Scripts/HrmsAccessoire/Accessoire.js"></script>
