@model HRMS.Models.HrmsLeaveViewModel
<div class="card">
    <h3> Leave Details</h3><hr />
    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>EMP_ID</th>
                <th>TYPE_LEAVE</th>
                <th>Apply_Total_Leave</th>
                <th>Reason_for_Leave</th>

                <th>Leave_To_Date</th>
                <th>Leave_from_Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.hrmsLeaveViewModels)
            {
                <tr class="userid-209" Leave="@item.Id">
                    <td>@item.Emp_Id</td>
                    <td>@item.TYPE_LEAVE</td>
                    <td>@item.APPLIED_TOTAL_LEAVE</td>
                    <td>@item.REASON_FOR_LEAVE</td>
                    <td>@item.LEAVE_FROM_DATE.ToString("dd/MM/yyyy")</td>
                    <td>@item.LEAVE_TO_DATE.ToString("dd/MM/yyyy")</td>

                </tr>
            }
        </tbody>
    </table>

</div>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style=" width: 1000px; height: 400px; margin-right:70%">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"></h5>
                <label style="margin-right: 85%;">Leave Detils</label>
            </div>
            <div class="modal-body">
                <div id="render-area"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal" aria-label="Close">Close</button>
                @*<a href="~/HrmsEmpDashboard/DeleteApprovel" class="btn btn-success">Delete</a>*@

            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/Dashboard/Dashboard.js"></script>



