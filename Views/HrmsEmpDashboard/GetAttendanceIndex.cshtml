@model HRMS.Models.HrmsUserAttendanceViewModel
<div class="card">
    <h3> Attendance Approvel Details</h3><hr />
    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>EMP_ID</th>
                <th>IN_TIME</th>
                <th>OUT_TIME</th>
                <th>Is_Rejected</th>
                <th>Is_Approved</th>
                <th>Remark</th>
                <th>Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.hrmsUserAttendance)
            {
                <tr class="userid-209" approvel="@item.Id">
                    <td>@item.EMP_ID</td>
                    <td>@item.IN_TIME.ToString("hh:mm tt")</td>
                    <td>@item.OUT_TIME.ToString("hh:mm tt")</td>
                    <td>@item.Is_Rejected</td>
                    <td>@item.Is_Approved</td>
                    <td>@item.Remark</td>
                    <td>@item.Type</td>


                </tr>
            }
        </tbody>
    </table>

</div>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style=" width: 1000px; height: 350px;">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"></h5>
                <label style="margin-right: 85%;">Approvel Detils</label>
            </div>
            <div class="modal-body">
                <div id="render-area"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal" aria-label="Close">Close</button>
                @*<a href="~/HrmsEmpDashboard/DeleteApprovel" class="btn btn-success">Delete</a>*@

            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/Dashboard/Dashboard.js"></script>
