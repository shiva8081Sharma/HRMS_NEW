<script type="text/javascript">
    $(window).on('load', function () {
        $('#myModal').modal('show');
        var demo = $('#timevalue').attr('value');
        console.log(demo);
        if (demo != null || demo != undefined) {

            $('#clickok').hide();
            $('#click123').show();
            $('#Approvel123').hide();
        }
        else {
            $('#clickok').show();
            $('#click123').hide();
            $('#Approvel124').hide();

        }


    });
</script>